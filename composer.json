{
    "name": "brick/date-time",
    "description": "Date and time library",
    "type": "library",
    "keywords": [
        "Brick",
        "Date",
        "Time"
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "satooshi/php-coveralls": "1.*"
    },
    "suggest": {
        "ext-timezonedb": "This PECL extension provides up-to-date timezone information"
    },
    "autoload": {
        "psr-4": {
            "Brick\\DateTime\\": "src/",
            "Brick\\DateTime\\Tests\\": "tests/"
        },
        "files": ["compat/functions.php"]
    }
}