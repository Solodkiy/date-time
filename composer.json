{
    "name": "brick/date-time",
    "description": "Date and time library",
    "type": "library",
    "keywords": [
        "Brick",
        "Date",
        "Time"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "satooshi/php-coveralls": "2.*"
    },
    "suggest": {
        "ext-timezonedb": "This PECL extension provides up-to-date timezone information"
    },
    "autoload": {
        "psr-4": {
            "Brick\\DateTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brick\\DateTime\\Tests\\": "tests/"
        }
    }
}